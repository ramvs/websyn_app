<h1>Listing Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Group name</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><b><%= user.email %></b></td>
        <td><%= user.groups.map {|c| c.name}.join(', ') %></td>
        <td><%= link_to 'Show', user %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>